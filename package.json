{
  "name": "Breaditor",
  "version": "2.0.1",
  "description": "",
  "main": "./dist/main.js",
  "scripts": {
    "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "npm run build-main && npm run build-renderer",
    "start-renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
    "start-dev": "cross-env NODE_ENV=test START_HOT=1 npm run start-renderer-dev",
    "dev": "npm run start-dev",
    "prestart": "npm run build",
    "start": "electron .",
    "lint": "eslint --ext=jsx,js,tsx,ts src",
    "lint-fix": "eslint --fix --ext=jsx,js,tsx,ts src",
    "test": "jest --detectOpenHandles",
    "watch": "jest --detectOpenHandles --watchAll",
    "pretest:e2e": "npm run build",
    "test:e2e": "jest --testMatch '**/?(*.)+(e2etest).[tj]s?(x)'",
    "test-circle": "npm test && npm run test:e2e",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{json,css,scss,md}": [
      "prettier --config ./.prettierrc --write"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "prettier --config ./.prettierrc --write",
      "eslint --ext=jsx,js,ts,tsx --fix src"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
    },
    "setupFiles": [
      "./setup-jest.js"
    ]
  },
  "build": {
    "productName": "Breaditor",
    "appId": "com.breadbros.breaditor",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:Robinfr/electron-react-typescript.git"
  },
  "author": {
    "name": "Ben McGraw",
    "email": "ben@breadbros.com"
  },
  "license": "MIT License",
  "bugs": {
    "url": "https://github.com/mcgrue/breaditor/issues"
  },
  "homepage": "https://breaditor.com",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.9",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@hot-loader/react-dom": "^17.0.2",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/react-redux": "^7.1.18",
    "@types/react-test-renderer": "^16.9.5",
    "@types/webdriverio": "^4.8.7",
    "@types/webpack-env": "^1.16.2",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@webpack-cli/serve": "^1.6.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.3.2",
    "cross-env": "^5.1.3",
    "css-loader": "^6.6.0",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.13",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "husky": "^4.3.8",
    "image-webpack-loader": "^8.1.0",
    "jest": "^27.5.1",
    "lint-staged": "^10.5.4",
    "node-sass": "^7.0.1",
    "prettier": "^1.18.2",
    "react-hot-loader": "^4.13.0",
    "react-test-renderer": "^16.14.0",
    "redux-devtools-extension": "^2.13.9",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "spectron": "^19.0.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^27.1.3",
    "typescript": "^3.9.10",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@sphinxxxx/color-conversion": "^2.2.2",
    "@testing-library/react": "^12.0.0",
    "@types/jquery": "^3.5.6",
    "@types/node": "^16.4.10",
    "@types/react-panelgroup": "^1.0.2",
    "@types/source-map-support": "^0.5.4",
    "acorn": "^8",
    "electron-canvas-to-buffer": "^2.0.0",
    "electron-context-menu": "^3.1.2",
    "events": "^3.3.0",
    "fs-jetpack": "^1.3.1",
    "html-webpack-plugin": "^5.3.2",
    "is-electron": "^2.2.0",
    "jquery": "^3.6.0",
    "jquery-ui": "^1.13.1",
    "lodash": "^4.17.20",
    "natives": "^1.1.6",
    "pngjs": "^6.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-panelgroup": "^1.0.12",
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "source-map-support": "^0.5.19",
    "sprintf-js": "^1.1.2",
    "typescript-plugin-css-modules": "^3.4.0",
    "ui-contextmenu": "^1.18.1",
    "uuid": "^8.0.0"
  }
}
